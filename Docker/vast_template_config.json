{
  "name": "Dissertation Environment (GLIBCXX Compatible)",
  "image": "your-registry/dissertation-env:latest",
  "env": {
    "PYTHONUNBUFFERED": "1",
    "CUDA_DEVICE_MAX_CONNECTIONS": "1", 
    "PYTORCH_CUDA_ALLOC_CONF": "expandable_segments:True",
    "HF_HOME": "/workspace/downloaded_models"
  },
  "volumes": {
    "model_cache": "/workspace/downloaded_models",
    "project_outputs": "/workspace/output", 
    "project_logs": "/workspace/log"
  },
  "ports": {
    "8888": "8888",
    "6006": "6006"
  },
  "onstart": "bash /workspace/code/vast_setup.sh",
  "description": "Containerized environment with modern glibc/libstdc++ libraries to resolve GLIBCXX compatibility issues. Python 3.12 + your exact requirements.txt"
}