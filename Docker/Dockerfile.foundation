# Use Ubuntu 22.04 with modern glibc (2.35) to resolve GLIBCXX issues
FROM nvidia/cuda:12.1.1-cudnn8-devel-ubuntu22.04

# Update system and install Python 3.10 (Ubuntu 22.04 default)
RUN apt-get update && apt-get install -y \
    python3 python3-pip python3-dev \
    build-essential git curl wget \
    libc6-dev libstdc++6 \
    && rm -rf /var/lib/apt/lists/*

# Create symlinks for consistency
RUN ln -sf /usr/bin/python3 /usr/bin/python

# Verify glibc version (should be 2.35+ for GLIBCXX_3.4.29+)
RUN ldd --version

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV CUDA_DEVICE_MAX_CONNECTIONS=1
ENV PYTORCH_CUDA_ALLOC_CONF=expandable_segments:True
ENV HF_HOME=/workspace/downloaded_models

# Install dependencies
COPY requirements.txt .
RUN pip3 install --no-cache-dir -r requirements.txt

# Test GLIBCXX compatibility
RUN python3 -c "import torch; print(f'PyTorch version: {torch.__version__}')"
RUN python3 -c "import vllm; print('vLLM import successful')" || echo "vLLM import will be tested later"

# Set working directory
WORKDIR /workspace

# Default command
CMD ["/bin/bash"]